@model List<AspNetMvcCrud.Models.Domain.Employee>
@{
}
<h1>Emplyoees</h1>
<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Email</th>
			<th>Salary</th>
			<th>Birth</th>
			<th>Department</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach(var employee in Model){
			<tr>
				<td>@employee.Id</td>
				<td>@employee.Email</td>
				<td>@employee.Salary</td>
				<td>@employee.Birth.ToString("yyyy-MM-dd")</td>
				<td>@employee.Department</td>
				<td><a href="Employee/View/@employee.Id">View</a></td>
			</tr>
		}
	</tbody>
</table>